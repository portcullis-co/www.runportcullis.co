---
import BentoGrid from "@/components/sections/bentogrid.astro";
import Features from "@/components/sections/features.astro";
import HeroSection from "@/components/sections/hero-section.astro";
import ProcessSteps from "@/components/sections/process-steps.astro";
import MainLayout from "@/layouts/main-layout.astro";
import { Button } from "@/components/ui/button";
import { Icon } from "astro-icon/components";
import HeaderSection from "@/components/sections/header-section.astro";

const pageTitle = "Deployment Support & Services | Your Company Name";
const pageDescription = "Professional deployment support services to ensure your applications run smoothly in production environments.";
---

<MainLayout title={pageTitle} description={pageDescription}>
    <HeroSection 
        title="Expert Deployment Support"
        subtitle="Launch your applications with confidence using our professional deployment services"
        heroImg="https://images.pexels.com/photos/688890/pexels-photo-688890.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=1"
        overlay="https://clickhouse.com/_next/image?url=%2Fimages%2Fclickhouse%2Foss_hero_image.png&w=3840&q=75"
    />
    <section>
        <div class="pb-6 pt-28">
          <div class="container max-w-6xl">
            <HeaderSection
              label="Services"
              title="Nearly 24/7 data engineering support for your Clickhouse environment"
              subtitle="Sleep soundly knowing that Portcullis is keeping your infrastructure running smoothly with the best optimizations"
            />
      
            <div class="mt-12 grid gap-3 sm:grid-cols-2 lg:grid-cols-3">
              <!-- Feature 1 -->
              <div class="group relative overflow-hidden rounded-2xl border bg-background p-5 md:p-8">
                <div
                  aria-hidden="true"
                  class="absolute inset-0 aspect-video -translate-y-1/2 rounded-full border bg-gradient-to-b from-black to-white opacity-25 blur-2xl duration-300 group-hover:-translate-y-1/4 dark:from-white dark:to-white dark:opacity-5 dark:group-hover:opacity-10"
                />
                <div class="relative">
                  <div class="relative flex size-12 rounded-2xl border border-border shadow-sm *:relative *:m-auto *:size-6">
                    <Icon name="lucide:cloud" class="m-auto text-foreground" />
                  </div>
      
                  <h3 class="mt-4 text-xl font-semibold text-foreground">On-demand Support</h3>
                  <p class="mt-6 pb-6 text-muted-foreground">
                    Get help when you need it from our team of data engineers.
                  </p>
      
                  <div class="-mb-5 flex gap-3 border-t border-muted py-4 md:-mb-7">
                    <Button
                      variant="secondary"
                      size="sm"
                      rounded="xl"
                      className="px-4"
                    >
                    <a href="/schedule-a-chat" class="flex items-center gap-2">
                        <span>Get a quote</span>
                        <Icon name="lucide:arrow-up-right" class="size-4" />
                      </a>
                    </Button>
                  </div>
                </div>
              </div>
      
              <!-- Feature 2 -->
              <div class="group relative overflow-hidden rounded-2xl border bg-background p-5 md:p-8">
